{% if banner %}
<div class="top-banner">
    {% if banner.html %}
        {{ banner.html|raw }}
    {% else %}
        <a href="{{ path("banner_redirect", {"id": banner.id}) }}" target="_blank"><img src="{{ banner.webPath | apply_filter('banner_main_horizontal') }}" alt="" /></a>
    {% endif %}
</div>
{% endif %}
